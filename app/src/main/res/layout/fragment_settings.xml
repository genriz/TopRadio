<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.app.topradio.model.MainViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">
            <ImageView
                android:id="@+id/autoPlayIcon"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.07"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_autoplay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/autoPlayIcon"
                app:layout_constraintEnd_toStartOf="@id/switchAutoPlay"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:text="@string/auto_play"
                    android:textColor="@color/stations_list"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:background="@android:color/transparent"
                android:id="@+id/switchAutoPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:track="@drawable/switch_settings"
                android:thumb="@drawable/switch_thumb"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">
            <ImageView
                android:id="@+id/headphoneIcon"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.07"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_headphone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/headphoneIcon"
                app:layout_constraintEnd_toStartOf="@id/switchHeadphone"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:text="@string/headphone"
                    android:textColor="@color/stations_list"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:background="@android:color/transparent"
                android:id="@+id/switchHeadphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:track="@drawable/switch_settings"
                android:thumb="@drawable/switch_thumb"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">
            <ImageView
                android:id="@+id/reconnectIcon"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.07"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_reconnect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/reconnectIcon"
                app:layout_constraintEnd_toStartOf="@id/switchReconnect"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:text="@string/reconnect"
                    android:textColor="@color/stations_list"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:background="@android:color/transparent"
                android:id="@+id/switchReconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:track="@drawable/switch_settings"
                android:thumb="@drawable/switch_thumb"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settingTimer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">
            <ImageView
                android:id="@+id/timerIcon"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.07"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_timer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/timerIcon"
                app:layout_constraintEnd_toStartOf="@id/arrowTimer"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:text="@string/timer"
                    android:textColor="@color/stations_list"/>
                <TextView
                    android:id="@+id/timerValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    setTimerText="@{viewModel.timerValue}"
                    android:textColor="@color/setting_subtitle"/>
            </LinearLayout>
            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/arrowTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_arrow_right2"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settingBuffer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">
            <ImageView
                android:id="@+id/bufferIcon"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.07"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_buffer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/bufferIcon"
                app:layout_constraintEnd_toStartOf="@id/arrowBuffer"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:text="@string/buffer"
                    android:textColor="@color/stations_list"/>
                <TextView
                    android:id="@+id/bufferSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    android:textColor="@color/setting_subtitle"/>
            </LinearLayout>
            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/arrowBuffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_arrow_right2"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settingTheme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">
            <ImageView
                android:id="@+id/themeIcon"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.07"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_theme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@id/themeIcon"
                app:layout_constraintEnd_toStartOf="@id/switchDarkTheme"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:text="@string/theme"
                    android:textColor="@color/stations_list"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:background="@android:color/transparent"
                android:id="@+id/switchDarkTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:track="@drawable/switch_settings"
                android:thumb="@drawable/switch_thumb"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
    </LinearLayout>
</layout>