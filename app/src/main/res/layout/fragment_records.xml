<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="adapter"
            type="com.app.topradio.ui.adapters.RecordsListAdapter"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_main_container">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/menu_default"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            android:id="@+id/recordsInfo"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/stations_list"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stationsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/recordsInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            setAdapter="@{adapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>